@model IEnumerable<DESCUENTOS_ASOCIADOS.Models.TBL_ASOCIADO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<h2>ASOCIADOS</h2>

<p>
    @Html.ActionLink("Crear nuevo Asociado", "Create")
</p>
<table class="class="table table-bordered table-responsive" style="width:100%">
    <tr style="background-color:#000000;color:#ffffff">
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TELOFONO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TBL_CONCEPTOS.CODIGO_CONCEPTO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TELOFONO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TBL_CONCEPTOS.CODIGO_CONCEPTO)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_ASOCIADO }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_ASOCIADO }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_ASOCIADO })
        </td>
    </tr>
}

</table>
